<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_dialog_bg"
    android:fillViewport="true"

    tools:context=".ui.dialog.QrCodePatientDialog">

    <Button
        android:id="@+id/back_bt_consultQrCode_patient"
        style="@style/button1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_consultQrCode_patient"
        app:layout_constraintStart_toStartOf="@+id/btn_consultQrCode_patient"
        app:layout_constraintTop_toBottomOf="@+id/btn_consultQrCode_patient" />

    <Button
        android:id="@+id/btn_consultQrCode_patient"
        style="@style/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:text="ler um qrcode"
        app:icon="@drawable/ic_qr_code"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>